{% extends 'MaallsAdminBundle::layout.html.twig' %}
{% form_theme form "bootstrap_3_layout.html.twig" 'MaallsAddressBundle::form/fields.html.twig' %}
{% block pageTitle %}Addresses{% endblock %}
{% block breadcrumb %}

    <li class="active">
        <a href="{{ path('maalls_addresses') }}">Addresses</a>
    </li>
    <li>
        edit
    </li>
{% endblock %}

{% block main %}

    
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Edit Address</h5>
                </div>
                <div class="ibox-content">
                    
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}, 'action': path('maalls_addresses_update'), 'method': 'POST'}) }}
                        {{ form_errors(form) }}

                        {{ form_row(form.country) }}
                        {{ form_row(form.zip_code) }}
                        
                        {{ form_row(form.province) }}
                        {{ form_row(form.city) }}
                        {{ form_row(form.address_line1) }}
                        {{ form_row(form.address_line2) }}
                        {{ form_row(form.lat) }}
                        {{ form_row(form.lng) }}
                        <div id="map-canvas" class="google-map"></div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group"><button type="submit" id="address_save" name="" class="btn-default btn">Save</button>
                        </div>

                    {{ form_end(form) }}

                    
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}

{% block stylesheets %}
    <link href="/bundles/maallsaddress/css/edit.css" rel="stylesheet">
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript" src="/bundles/maallsaddress/js/map.js"></script>
    <script type="text/javascript" src="/bundles/maallsaddress/js/zipcode.js"></script>
    <script type="text/javascript" src="/bundles/maallsaddress/js/edit.js"></script>
{% endblock %}